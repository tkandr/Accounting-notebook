{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": true
    }
  },
  "env": {
    "es6":     true,
    "node":    true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "indent": ["error", 2, {"SwitchCase": 1}]
  }
}
